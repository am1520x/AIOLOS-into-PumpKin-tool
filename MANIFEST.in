# Include important documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include data files
recursive-include aiolos_pumpkin_tool/data *.txt *.reac *.dat

# Include PumpKin binaries and resources if available
recursive-include aiolos_pumpkin_tool/pumpkin *

# Include documentation
recursive-include docs *.rst *.py *.md *.txt
recursive-include docs/_static *
recursive-include docs/_templates *

# Include test data
recursive-include aiolos_pumpkin_tool/tests/data *.txt *.dat *.reac

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude __pycache__